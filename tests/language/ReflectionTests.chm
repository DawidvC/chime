implementation ReflectionTests : Test.Case
{
    method test_class_name()
    {
        Assert.equal("ReflectionTests", to:ReflectionTests.name)
    }
    
    method test_self_class()
    {
        Assert.equal(ReflectionTests, to:self.class)
    }
    
    method test_self_class_name()
    {
        Assert.equal("ReflectionTests", to:self.class.name)
    }
    
    method test_method_names()
    {
        methods = Object.new().methods
        
        Assert.equal(methods.length, to:6)
        
        Assert.equal(methods[0].name, to:"class")
        Assert.equal(methods[1].name, to:"methods")
        Assert.equal(methods[2].name, to:"invoke")
        Assert.equal(methods[3].name, to:"to_string")
        Assert.equal(methods[4].name, to:"==")
        Assert.equal(methods[5].name, to:">")
    }
}
